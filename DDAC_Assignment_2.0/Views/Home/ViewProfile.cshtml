@model DDAC_Assignment_2._0.Models.UserVM

<div class="container">

    <form method="get">
        <h4 style="display:inline-block">User Details</h4>
        <input type="submit" style="float:right;" class="btn btn-success" asp-controller="Home" asp-action="ChangePassword" value="Change Password" />
    </form>

    <form method="post">
        <input class=form-contorl asp-for="id" hidden />
        <div class="form-group row">
            <label class="col-md-2" asp-for="name"></label>
            <div class="col-md-10">
                <input type="text" asp-for="name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2" asp-for="email"></label>
            <div class="col-md-10">
                <input type="text" asp-for="email" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2" asp-for="contactNumber"></label>
            <div class="col-md-10">
                <input type="text" asp-for="contactNumber" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2" asp-for="roleName"></label>
            <div class="col-md-10">
                <input type="text" asp-for="roleName" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row" style="margin-top:25px; margin-right:15px; float:right">
            <div class="col-md-10 offset-md-2">
                <input type="submit" value="Save Changes" asp-action="EditDetails" asp-controller="Home" class="btn btn-success" />
            </div>
        </div>
    </form>
</div>