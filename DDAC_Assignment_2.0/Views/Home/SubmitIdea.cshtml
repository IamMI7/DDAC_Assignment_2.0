    ======================================================== -->
</head>

<body>

    <main id="main">

        <!-- ======= Breadcrumbs ======= -->
        <section class="breadcrumbs">
            <div class="container">

                <div class="d-flex justify-content-between align-items-center">
                    <h2>Submit your Ideas</h2>
                    <ol>
                        <li><a asp-area="" asp-controller="Home" asp-action="Login">Home</a></li>
                        <li>Idea Submission</li>
                    </ol>
                </div>

            </div>
        </section><!-- End Breadcrumbs -->

        <section class="inner-page">
            <div class="container">
                <div class="row">
                    <section>
                        <form method="post" enctype="multipart/form-data"
                              asp-controller="Home" asp-action="SubmitIdea">
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label>Title</label>
                                    <input type="text" name="Title" class="form-control" id="title" required>
                                </div>
                                <div class="form-group col-md-6 mt-3 mt-md-0">
                                    <label>Material</label>
                                    <select asp-for="Material" asp-items='@(new SelectList(ViewBag.Materials,"Material"))' class="form-control" id="material" required></select>
                                    <span asp-validation-for="Material" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group mt-3">
                                <label for="name">Message</label>
                                <textarea class="form-control" name="message" rows="10" required></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="form-group mt-3">
                                    <p>Please upload a picture of your creation:</p>
                                    <input type="file" name="images" class="form-control" required/>
                                </div>
                            </div>
                            <div id="StatMsg"></div>
                            <div class="form-group mt-3">
                                <input type="submit" value="Submit" style="margin-top:10px" class="btn btn-success"/>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </section>

    </main><!-- End #main -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>

</body>

</html>

<script>
    window.onload = function () {
        var getStatus = '@ViewData["SignState"]';
        /*Create Room*/
        if (getStatus == null || getStatus == "") {

        } else if (getStatus == "NotSigned") {
            document.getElementById("StatMsg").innerHTML = "Please Login or Register an account to submit an idea.";
            document.getElementById("StatMsg").style.color = "#ff0033";
        }
    };

</script>