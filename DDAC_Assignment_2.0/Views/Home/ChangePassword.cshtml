@model DDAC_Assignment_2._0.Models.ChangePasswordVM

<div class="container" style="margin-top:150px">
    <h4>Change Password</h4>
    <p class="Description">For your security, we highly recommend that you choose a unique password that you don't use for any other online account.</p>
    <hr />
    <div class="Password-field">
        <form method="post">
            @if (TempData["Message"] != null)
            {
                <div class="form-group row">
                    <div class="col-md-10">
                        <div class="alert alert-danger text-danger">
                            @TempData["Message"]
                        </div>
                    </div>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row" style="margin-top:15px">
                <label class="col-md-2" asp-for="Password"></label>
                <div class="col-md-10">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row" style="margin-top:15px">
                <label class="col-md-2" asp-for="newPassword"></label>
                <div class="col-md-10">
                    <input asp-for="newPassword" class="form-control" />
                    <span asp-validation-for="newPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row" style="margin-top:15px">
                <label class="col-md-2" asp-for="confirmationPassword"></label>
                <div class="col-md-10">
                    <input asp-for="confirmationPassword" class="form-control" />
                    <span asp-validation-for="confirmationPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row" style="margin-top:25px; margin-right: 15px; float:right">
                <div class="col-md-10 offset-md-2">
                    <input type="submit" value="Save Changes" asp-action="ChangePassword" asp-controller="Home" class="btn btn-success" />
                </div>
            </div>
            <div class="form-group row" style="margin-top: 25px; margin-right: 15px; float: right">
                <div class="col-md-10 offset-md-2">
                    <input type="submit" value="Discard Changes" asp-action="Index" asp-controller="Home" class="btn btn-danger" />
                </div>
            </div>
        </form>
    </div>
    <div class="Password-information">
        <div class="Title-Section">
            <p class="title">YOUR PASSWORD SHOULD BE</p>
        </div>
        <div class="Description">
            <p class="Description">Your password must have 7+ characters</p>
            <p class="Description">Your password must have at least 1 number</p>
            <p class="Description">Your password must contains no space</p>
        </div>
    </div>
</div>
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}