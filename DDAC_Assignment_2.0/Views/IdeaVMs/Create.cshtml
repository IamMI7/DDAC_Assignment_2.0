    <!-- Template Main CSS File -->
    <link href="~/assets/css/style.css" rel="stylesheet">

</head>

<body>

    <main id="main">
        <!-- ======= Ideas Page Section ======= -->
        <section class="inner-page">
            <div class="container">
                <div class="section-title">
                    <h2>Create New Idea</h2>
                </div>
                <div>
                    <hr />
                    <div class="row">
                        <section>
                            <form method="post" enctype="multipart/form-data"
                                  asp-controller="Home" asp-action="SubmitIdea" onsubmit="return checkFile()">
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label>Title</label>
                                        <input type="text" name="Title" class="form-control" id="title" required>
                                    </div>
                                    <div class="form-group col-md-6 mt-3 mt-md-0">
                                        <label>Material</label>
                                        <select asp-for="Material" asp-items='@(new SelectList(ViewBag.Materials,"Material"))' class="form-control" id="material" required></select>
                                        <span asp-validation-for="Material" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group mt-3">
                                    <label for="name">Please provide detailed steps and tools needed in a .txt, .docx, .doc, or .pdf file.</label>
                                    <input type="file" id="messageFile" name="document" class="form-control" accept=".txt,.docx,.doc,.pdf" required />
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="form-group mt-3">
                                        <p>Please upload a picture of your creation:</p>
                                        <input type="file" id="uploadFile" name="images" class="form-control" accept=".jpg,.jpeg,.png" required />
                                    </div>
                                </div>
                                <input type="hidden" name="Message" value="test" />
                                <div id="StatMsg"></div>
                                <div class="form-group mt-3">
                                    <input type="submit" value="Submit" style="margin-top:10px" class="btn btn-success" />
                                </div>
                            </form>
                        </section>
                    </div>
                </div>
            </div>
        </section>

    </main><!-- End #main -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>

</body>

</html>

